(library
 (name        uri)
  (public_name uri)
  (wrapped (transition "Please switch to using Uri.Re instead of Uri_re"))
  (modules uri uri_re)
  (libraries re.posix stringext))

(library
 (name			uri_sexp)
  (public_name	uri.sexp)
  (modules uri_sexp)
  (preprocess (pps ppx_sexp_conv))
  (libraries sexplib0 uri))

(library
 (name        uri_top)
  (public_name uri.top)
  (modules uri_top)
  (libraries uri compiler-libs.toplevel))
